{
  "module": {
    "symbolic-name": "cdmf.config.service",
    "name": "Configuration Service Module",
    "version": "1.0.0",
    "library": "config_service_module.so",
    "description": "Provides configuration management services for CDMF applications",
    "vendor": "CDMF Project",
    "category": "framework-service"
  },

  "dependencies": [],

  "exports": [
    {
      "interface": "cdmf::IConfigurationAdmin",
      "version": "1.0.0"
    }
  ],

  "activator": {
    "class": "cdmf::modules::ConfigServiceActivator",
    "create-function": "createModuleActivator",
    "destroy-function": "destroyModuleActivator"
  },

  "properties": {
    "config.storage.dir": "/workspace/build/config/store/config",
    "config.auto.reload": "true",
    "config.persistence.enabled": "true"
  },

  "cli-methods": [
    {
      "interface": "cdmf::IConfigurationAdmin",
      "method": "createConfiguration",
      "signature": "(pid:string) -> void",
      "description": "Create a new configuration with the given persistent identifier",
      "arguments": [
        {
          "name": "pid",
          "type": "string",
          "required": true,
          "description": "Unique persistent identifier (e.g., 'com.myapp.database')"
        }
      ]
    },
    {
      "interface": "cdmf::IConfigurationAdmin",
      "method": "getConfiguration",
      "signature": "(pid:string) -> properties",
      "description": "Get configuration properties for a given PID (creates if doesn't exist)",
      "arguments": [
        {
          "name": "pid",
          "type": "string",
          "required": true,
          "description": "Persistent identifier of the configuration"
        }
      ]
    },
    {
      "interface": "cdmf::IConfigurationAdmin",
      "method": "listConfigurations",
      "signature": "([filter:string]) -> list",
      "description": "List all configurations, optionally filtered by PID substring",
      "arguments": [
        {
          "name": "filter",
          "type": "string",
          "required": false,
          "description": "Optional filter string to match against PIDs"
        }
      ]
    },
    {
      "interface": "cdmf::IConfigurationAdmin",
      "method": "deleteConfiguration",
      "signature": "(pid:string) -> void",
      "description": "Delete a configuration by its persistent identifier",
      "arguments": [
        {
          "name": "pid",
          "type": "string",
          "required": true,
          "description": "Persistent identifier of the configuration to delete"
        }
      ]
    }
  ]
}
